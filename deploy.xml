<?xml version="1.0" encoding="UTF-8"?>
<deploydescriptor>
    <global>
        <version>136</version>
        <id>enhancedretrieval</id>
        <vendor>Ontoprise GmbH</vendor>
        <maintainer>Ontoprise GmbH</maintainer>
        <instdir>extensions/EnhancedRetrieval</instdir>
        <description>A client for the lucene wiki server</description>
        <dependencies>
            <dependency from="1150" to="1160">MW</dependency>
            <dependency from="100" to="100">scriptmanager</dependency>
        </dependencies>
    </global>
    <codefiles>

        <file loc="extensions/EnhancedRetrieval/deploy.xml" />
        <!-- TODO: add all others -->
    </codefiles>
    <wikidumps>
        <!-- empty -->
    </wikidumps>
    <resources>
        <!-- empty -->
    </resources>

    <configs>

        <new>

            <variable name="wgSearchType">
                <string name="wgSearchType"
                    description="Search engine type">LuceneSearch</string>
            </variable>
            <variable name="wgLuceneHost">
                <string name="wgLuceneHost" description="Host">localhost</string>
            </variable>
            <variable name="wgLucenePort">
                <string name="wgLucenePort" description="Port">8123</string>
            </variable>
            <variable name="wgLuceneSearchVersion">
                <string name="wgLuceneSearchVersion"
                    description="Version">2.1</string>
            </variable>
            <variable name="wgLuceneSearchTimeout">
                <string name="wgLuceneSearchTimeout"
                    description="HTTP-Timeout in s">5</string>
            </variable>
            
            <require name="us_init"
                file="extensions/EnhancedRetrieval/includes/EnhancedRetrieval.php" />
            <script file="extensions/EnhancedRetrieval/maintenance/setup.php" params="" />
        </new>
        <uninstall>
        	<script
        		file="extensions/EnhancedRetrieval/maintenance/setup.php"
        		params="--delete" />
        </uninstall>
    </configs>
</deploydescriptor>

